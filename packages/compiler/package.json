{
  "name": "@cadl-lang/compiler",
  "version": "0.25.0",
  "description": "Cadl Compiler Preview",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "homepage": "https://github.com/Azure/adl",
  "readme": "https://github.com/Azure/adl/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/adl.git"
  },
  "bugs": {
    "url": "https://github.com/Azure/adl/issues"
  },
  "keywords": [
    "cadl",
    "cli"
  ],
  "type": "module",
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "cadl": "cmd/cadl.js",
    "cadl-server": "cmd/cadl-server.js"
  },
  "files": [
    "lib/*.cadl",
    "dist/**",
    "!dist/test/**"
  ],
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -p . --watch",
    "dogfood": "node scripts/dogfood.js",
    "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watchAll --coverage=false",
    "test": "npm run jest -- --ci",
    "test-official": "jest --ci",
    "regen-nonascii": "node scripts/regen-nonascii.js",
    "fuzz": "node dist/test/manual/fuzz.js run"
  },
  "dependencies": {
    "ajv": "~8.4.0",
    "glob": "~7.1.6",
    "js-yaml": "~4.1.0",
    "mkdirp": "~1.0.4",
    "mustache": "~4.2.0",
    "prettier": "~2.4.1",
    "node-fetch": "~3.1.0",
    "prompts": "~2.4.1",
    "vscode-languageserver-textdocument": "~1.0.1",
    "vscode-languageserver": "~7.0.0",
    "yargs": "~17.0.1",
    "node-watch": "~0.7.1"
  },
  "devDependencies": {
    "@types/glob": "~7.1.3",
    "@types/js-yaml": "~4.0.1",
    "@types/mkdirp": "~1.0.1",
    "@types/jest": "~27.4.0",
    "@types/mustache": "~4.1.2",
    "@types/node": "~14.0.27",
    "@types/prettier": "^2.0.2",
    "@types/prompts": "~2.0.14",
    "@types/yargs": "~17.0.2",
    "grammarkdown": "~3.1.2",
    "jest": "~27.4.7",
    "ts-jest": "~27.1.3",
    "prettier-plugin-organize-imports": "~1.1.1",
    "source-map-support": "~0.5.19",
    "typescript": "~4.4.4"
  }
}
